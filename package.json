{
  "name": "prp-node",
  "version": "0.1.0",
  "description": "Creates a PDF from a local html page.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prpsake/prp-node.git"
  },
  "bugs": {
    "url": "https://github.com/prpsake/prp-node/issues"
  },
  "homepage": "https://github.com/prpsake/prp-node#readme",
  "author": "gourmetseasoningsake",
  "license": "Apache-2.0",
  "private": true,
  "type": "module",
  "prp": {
    "esmInput": "src/index.js",
    "esmOutput": "dist/PRPNode.esm.js",
    "binInput": ".",
    "binOutput": "dist/prp-node-x86_64-apple-darwin"
  },
  "dependencies": {
    "@ryyppy/rescript-promise": "^2.1.0",
    "fs-extra": "^10.0.1",
    "minikin": "^1.0.36",
    "playwright": "^1.21.0",
    "yargs": "^17.4.1"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.2.1",
    "ava": "4.2.0",
    "c8": "^7.11.0",
    "caxa": "^2.1.0",
    "rescript": "^9.1.4",
    "rollup": "^2.70.2",
    "sinon": "^13.0.2"
  },
  "scripts": {
    "test": "ava",
    "cov": "c8 -c c8.config.json --reporter=text ava",
    "bundle": "rollup -c",
    "build": "caxa --no-dedupe --prepare-command \"pnpm prune --prod\" --input \".\" --output \"dist/prp-node\" -- \"{{caxa}}/node_modules/.bin/node\" \"{{caxa}}/dist/PRPNode.esm.js\"",
    "dist": "pnpm re:build && pnpm bundle && pnpm build",
    "re:start": "rescript build -w",
    "re:build": "rescript"
  }
}
